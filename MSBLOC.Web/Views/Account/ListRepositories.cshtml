@model IEnumerable<GitHubRepository>

<div class="row">
    <div class="col-md-12">

        <h3>Repositories associated with current User</h3>
        <p>This page displays all the GitHub repositories associated the the current User.</p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Repository
                    </th>
                    <th>
                        Secret
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var repo in Model)
                {
                    <tr>
                        <td><a href="@repo.Url" target="_blank">@repo.Name</a></td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(repo.Secret))
                            {
                                @Html.ActionLink("Create Secret", "CreateSecret", "Account", new
                                {
                                    gitHubRepositoryId = repo.Id
                                })
                            }
                            else
                            {
                                @repo.Secret
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>